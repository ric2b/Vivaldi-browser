[
  {
    "namespace": "webViewPrivate",
    "description": "none",
    "compiler_options": {
      "implemented_in": "extensions/api/guest_view/web_view_private_api.h"
    },
    "types": [
      {
        "id": "ThumbnailParams",
        "type": "object",
        "description": "Object passed to various thumbnail capture functions.",
        "properties": {
          "width": {
            "type": "integer",
            "description": "The width of the scaled output bitmap.",
            "optional": true
          },
          "height": {
            "type": "integer",
            "description": "The height of the scaled output bitmap.",
            "optional": true
          },
          "scale": {
            "type": "number",
            "description": "Set scale of the output bitmap, defaults to 0.5. Note that |width.height| will be used if both |scale| and |width.height| are set.",
            "optional": true
          }
        }
      }
    ],
    "functions": [
      {
        "name": "getThumbnail",
        "type": "function",
        "parameters": [
          {
            "type": "integer",
            "name": "instanceId"
          },
          {
            "name": "params",
            "$ref": "ThumbnailParams"
          }
        ],
        "returns_async": {
          "name": "callback",
          "description": "Returns results",
          "parameters": [
            {
              "name": "thumbnail",
              "type": "string",
              "description": "Thumbnail in base64 format."
            }
          ]
        }
      },
      {
        "name": "showPageInfo",
        "type": "function",
        "parameters": [
          {
            "type": "integer",
            "name": "instanceId"
          },
          {
            "type": "object",
            "name": "position",
            "properties": {
              "left": {
                "type": "integer",
                "description": "Anchor left position, screen coordinates."
              },
              "top": {
                "type": "integer",
                "description": "Anchor top position, screen coordinates."
              }
            }
          }
        ]
      },
      {
        "name": "setIsFullscreen",
        "type": "function",
        "parameters": [
          {
            "type": "integer",
            "name": "instanceId"
          },
          {
            "type": "boolean",
            "name": "isFullscreen",
            "description": "This is used to set a webview as fullscreen or not. This is needed for updating the pseudo-style :fullscreen when going in and out of fullscreen not via element.requestFullscreen and element.cancelFullscreen ."
          }
        ]
      },
      {
        "name": "getPageHistory",
        "type": "function",
        "parameters": [
          {
            "type": "integer",
            "name": "instanceId",
            "description": "The instance ID of the guest <webview> process."
          }
        ],
        "returns_async": {
          "name": "callback",
          "description": "Called when history .",
          "does_not_support_promises": "vivaldi",
          "parameters": [
            {
              "type": "integer",
              "name": "currentEntryIndex",
              "description": "The current index."
            },
            {
              "name": "pageHistory",
              "type": "array",
              "description": "Array of history items with name and index.",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Title for the page."
                  },
                  "url": {
                    "type": "string",
                    "description": "URL for the entry."
                  },
                  "index": {
                    "type": "integer",
                    "description": "Relative history index. This can be used in <webview>.go(|index|)."
                  }
                }
              }
            }
          ]
        }
      },
      {
        "name": "allowBlockedInsecureContent",
        "type": "function",
        "description": "Will load all blocked content in a page.",
        "parameters": [
          {
            "type": "integer",
            "name": "instanceId"
          }
        ]
      },
      {
        "name": "sendRequest",
        "type": "function",
        "description": "Navigates the webview to a given URL but with greater control over the sent request.",
        "parameters": [
          {
            "type": "integer",
            "name": "instanceId"
          },
          {
            "type": "string",
            "name": "url",
            "description": "The URL of the page to navigate to."
          },
          {
            "$ref": "historyPrivate.TransitionType",
            "name": "transitionType",
            "description": "How the URL was reached."
          },
          {
            "type": "boolean",
            "name": "fromUrlField",
            "description": "Whether the request came from the url field"
          },
          {
            "type": "boolean",
            "name": "usePost",
            "description": "Whether to perform the navigation via POST."
          },
          {
            "type": "string",
            "name": "postData",
            "description": "When using POST, this will be the body of the request."
          },
          {
            "type": "string",
            "name": "extraHeaders",
            "description": "Extra headers to pass with the request. See OpenURLParams in chromium code."
          }
        ]
      },
      {
        "name": "getPageSelection",
        "type": "function",
        "description": "Get any selected text in the page.",
        "parameters": [
          {
            "type": "integer",
            "name": "instanceId"
          }
        ],
        "returns_async": {
          "name": "callback",
          "parameters": [
            {
              "name": "text",
              "type": "string",
              "description": "Get any selected text in the page."
            }
          ]
        }
      }
    ]
  }
]
