  testonly = true

  defines = [ "HAS_OUT_OF_PROC_TEST_RUNNER" ]

  sources = [
    "capture_mode_browsertest.cc",
    "chrome_capture_mode_delegate_browsertest.cc",
    "recording_service_browsertest.cc",
  ]

  deps = [
    ":capture_mode",
    "//ash",
    "//ash/constants",
    "//ash/public/cpp",
    "//base",
    "//base/test:test_support",
    "//chrome/browser/ash/crosapi",
