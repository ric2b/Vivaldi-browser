import("//build/config/android/config.gni")
import("//build/config/android/rules.gni")

android_library("delegate_java") {
  resources_package = "org.chromium.chrome.browser.tinker_tank"
  sources = [
    "java/src/org/chromium/chrome/browser/tinker_tank/TinkerTankDelegate.java",
    "java/src/org/chromium/chrome/browser/tinker_tank/TinkerTankDelegateImpl.java",
  ]
  deps = [
    "//base:supplier_java",
    "//chrome/browser/tab:java",
    "//chrome/browser/tabmodel:java",
    "//components/browser_ui/bottomsheet/android:java",
  ]
  if (defined(enable_tinker_tank_internal) && enable_tinker_tank_internal) {
    jar_excluded_patterns = [ "*/TinkerTankDelegateImpl.class" ]
  }
}

android_library("delegate_public_impl_java") {
  sources = [ "java/src/org/chromium/chrome/browser/tinker_tank/TinkerTankDelegateImpl.java" ]

  deps = [
    ":delegate_java",
    "//base:supplier_java",
    "//chrome/browser/tab:java",
    "//chrome/browser/tabmodel:java",
    "//components/browser_ui/bottomsheet/android:java",
  ]
}
