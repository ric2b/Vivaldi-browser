<layer-list
xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:width="42dp"
        android:height="20dp">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/gm3_baseline_surface_light"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>
    <item
        android:width="@dimen/tab_group_color_share_icon_item_size"
        android:height="@dimen/tab_group_color_share_icon_item_size"
        android:left="@dimen/tab_group_color_share_icon_inset"
        android:top="@dimen/tab_group_color_share_icon_inset">
        <shape
            android:shape="oval">
            <solid android:color="@macro/default_icon_color"/>
        </shape>
    </item>
    <item
        android:width="@dimen/tab_group_share_icon_item_size"
        android:height="@dimen/tab_group_share_icon_item_size"
        android:top="2dp"
        android:left="20dp"
        android:drawable="@drawable/tab_group_share_icon"/>
</layer-list>