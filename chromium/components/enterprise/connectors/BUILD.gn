import("//components/enterprise/buildflags/buildflags.gni")

assert(enterprise_content_analysis)

source_set("connectors") {
  sources = [
    "analysis/analysis_settings.cc",
    "analysis/analysis_settings.h",
    "common.cc",
    "common.h",
    "connectors_prefs.cc",
    "connectors_prefs.h",
    "device_trust/prefs.cc",
    "device_trust/prefs.h",
    "enterprise_connectors_policy_handler.cc",
    "enterprise_connectors_policy_handler.h",
    "reporting/constants.h",
    "reporting/reporting_service_settings.cc",
    "reporting/reporting_service_settings.h",
    "service_provider_config.cc",
    "service_provider_config.h",
  ]

  deps = [
    "//base",
    "//components/download/public/common:public",
    "//components/enterprise/buildflags:buildflags",
    "//components/enterprise/common/proto:connectors_proto",
    "//components/policy/core/browser",
    "//components/policy/core/common",
    "//components/prefs",
    "//components/prefs",
    "//components/strings:components_strings_grit",
    "//ui/gfx/range",
  ]

