import("//testing/test.gni")
import("//third_party/protobuf/proto_library.gni")

source_set("core") {
  sources = [ "session_proto_storage.h" ]

  deps = [ "//components/leveldb_proto" ]
}

if (!is_ios) {
  source_set("session_proto_db") {
    sources = [ "session_proto_db.h" ]

    deps = [
      ":core",
