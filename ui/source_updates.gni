import("//build/config/ui.gni")

update_target("//content/public/browser:browser_sources") {
  sources += [
    "//vivaldi/ui/content/vivaldi_tab_check.cc",
    "//vivaldi/ui/content/vivaldi_tab_check.h",
  ]
}

update_target("//components/input:input") {
  sources += [
    "//vivaldi/ui/content/vivaldi_event_hooks.cc",
    "//vivaldi/ui/content/vivaldi_event_hooks.h",
  ]
  if ((is_linux || is_win) && (target_cpu == "arm64" || target_cpu == "arm")) {
    deps += [
      "//components/services/storage/public/mojom",
      "//components/services/storage/privileged/mojom",
      "//components/services/quarantine/public/mojom",
      "//content/services/auction_worklet/public/mojom",
      "//media/mojo/mojom:remoting",
      "//services/cert_verifier/public/mojom",
      "//vivaldi/renderer/mojo:frame_service",
    ]
  }
}

update_target("//chrome/browser/ui:ui") {
  sources += [
    "//vivaldi/ui/about/vivaldi_about_version.cc",
    "//vivaldi/ui/about/vivaldi_about_version.h",
  ]
  if (!is_android) {
    sources += [
      "//vivaldi/ui/views/video_pip_controller.cc",
      "//vivaldi/ui/views/video_pip_controller.h",
      "//vivaldi/ui/views/vivaldi_bookmark_menu_controller_views.cc",
      "//vivaldi/ui/views/vivaldi_bookmark_menu_views.h",
      "//vivaldi/ui/views/vivaldi_bookmark_menu_views.cc",
      "//vivaldi/ui/views/vivaldi_context_menu_views.cc",
      "//vivaldi/ui/views/vivaldi_context_menu_views.h",
      "//vivaldi/ui/views/vivaldi_native_widget.h",
      "//vivaldi/ui/views/vivaldi_overlay_window_views.cc",
      "//vivaldi/ui/views/vivaldi_overlay_window_views.h",
      "//vivaldi/ui/views/vivaldi_window_frame_view.h",
      "//vivaldi/ui/vivaldi_ui_web_contents_delegate.cc",
      "//vivaldi/ui/vivaldi_ui_web_contents_delegate.h",
      "//vivaldi/ui/vivaldi_browser_window.cc",
      "//vivaldi/ui/vivaldi_browser_window.h",
      "//vivaldi/ui/vivaldi_side_panel_coordinator.cc",
      "//vivaldi/ui/vivaldi_side_panel_coordinator.h",
      "//vivaldi/ui/infobar_container_web_proxy.cc",
      "//vivaldi/ui/infobar_container_web_proxy.h",
      "//vivaldi/ui/vivaldi_context_menu.cc",
      "//vivaldi/ui/vivaldi_context_menu.h",
      "//vivaldi/ui/vivaldi_document_loader.cc",
      "//vivaldi/ui/vivaldi_document_loader.h",
      "//vivaldi/ui/vivaldi_location_bar.cc",
      "//vivaldi/ui/vivaldi_location_bar.h",
      "//vivaldi/ui/vivaldi_message_box_dialog.cc",
      "//vivaldi/ui/vivaldi_message_box_dialog.h",
      "//vivaldi/ui/vivaldi_tab_model.cc",
      "//vivaldi/ui/vivaldi_tab_strip_model.cc",
      "//vivaldi/ui/views/vivaldi_window_widget_delegate.cc",
      "//vivaldi/ui/views/vivaldi_window_widget_delegate.h",
      "//vivaldi/ui/vivaldi_quit_confirmation_dialog.cc",
      "//vivaldi/ui/vivaldi_quit_confirmation_dialog.h",
      "//vivaldi/ui/vivaldi_ui_utils.cc",
      "//vivaldi/ui/vivaldi_ui_utils.h",
    ]
    deps += [
      "//vivaldi/ui/vector_icons:vector_icons",
    ]
  }
  if (is_mac) {
    sources += [
      "//vivaldi/ui/vivaldi_context_menu_mac.h",
      "//vivaldi/ui/vivaldi_context_menu_mac.mm",
      "//vivaldi/ui/vivaldi_main_menu_mac.h",
      "//vivaldi/ui/vivaldi_main_menu_mac.mm",
      "//vivaldi/ui/views/vivaldi_native_widget_mac.mm",
      "//vivaldi/ui/views/vivaldi_window_frame_view_mac.mm",
    ]
  }
  if (is_win || is_linux) {
    sources += [
      "//vivaldi/ui/views/vivaldi_system_menu_model_builder.cc",
      "//vivaldi/ui/views/vivaldi_system_menu_model_builder.h",
      "//vivaldi/ui/views/vivaldi_window_frame_view_aura.cc",
    ]
  }
  if (is_win) {
    sources += [
      "//vivaldi/ui/views/vivaldi_desktop_window_tree_host_win.cc",
      "//vivaldi/ui/views/vivaldi_desktop_window_tree_host_win.h",
      "//vivaldi/ui/views/vivaldi_native_widget_win.cc",
      "//vivaldi/ui/vivaldi_browser_window_win.cc",
    ]
  }

  configs += [
    "//vivaldi/gn/config:release_kind",
  ]
}

update_target("//ui/menus:menus") {
  sources += [
    "//vivaldi/ui/base/vivaldi_simple_menu_model.cc",
  ]
}

if (!is_android) {
  update_template_instance("//content/public/common:interfaces") {
    visibility += ["//ui/views:views"]
  }

  update_target("//ui/views:views") {
    sources += [
      "//vivaldi/ui/content/vivaldi_event_hooks.h",
      "//vivaldi/ui/views/vivaldi_menu_controller_views.cc",
      "//vivaldi/ui/views/vivaldi_menu_config.cc",
      "//vivaldi/ui/views/vivaldi_menu_delegate.cc",
      "//vivaldi/ui/views/vivaldi_menu_model_adapter.cc",
      "//vivaldi/ui/views/controls/mute_button.cc",
      "//vivaldi/ui/views/controls/mute_button.h",
      "//vivaldi/ui/views/controls/video_progress.cc",
      "//vivaldi/ui/views/controls/video_progress.h",
      "//vivaldi/ui/views/controls/volume_slider.cc",
      "//vivaldi/ui/views/controls/volume_slider.h",
    ]
    deps += [
      "//base",
      "//content/public/common:interfaces",
      "//third_party/blink/public:blink_headers",
      "//vivaldi/app:resources",
      "//vivaldi/ui/vector_icons:vector_icons",
    ]
  }
}

if (is_win) {
  update_target("//ui/base:base") {
    sources += [
      "//vivaldi/ui/dragging/custom_drag_source_win.cc",
      "//vivaldi/ui/dragging/custom_drag_source_win.h",
    ]
  }
}
