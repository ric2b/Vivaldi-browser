if (is_linux || is_mac || is_win) {
  update_target("//third_party/ffmpeg:ffmpeg_internal") {
    if (is_mac) {
      sources += [
        "//vivaldi/platform_media/ffmpeg/audiotoolboxdec.c",
      ]
    }

    if (is_win) {
      sources += [
        "//vivaldi/platform_media/ffmpeg/wmfaacdec.c",
        "//vivaldi/platform_media/ffmpeg/wmfaacdec.h",
      ]
      libs += [
        "Mfplat.lib",
        "mfuuid.lib",
        "wmcodecdspuuid.lib",
      ]
    }

    sources += [
        "//vivaldi/platform_media/ffmpeg/ffviv_audio_kit.c",
        "//vivaldi/platform_media/ffmpeg/ffviv_audio_kit.h",
        "//vivaldi/platform_media/ffmpeg/ffviv_log.cc",
        "//vivaldi/platform_media/ffmpeg/ffviv_log.h",
    ]

    # Allow to call Chromium logging
    deps += [ "//base" ]

    # Use the generated config files as include files. We replace the original
    # include directory for FFmpeg config rather than inserting the gen one as
    # the first element into include_dirs to trigger a compilation error if
    # generate_config target would not place all config files into gen, see
    # comments in ffmpeg/BUILD.fn for details.
    deps += ["//vivaldi/platform_media/ffmpeg:generate_config"]
    assert(include_dirs[0] ==
        "chromium/config/$ffmpeg_branding/$os_config/$ffmpeg_arch")

    # This should be just include_dirs[0] = get_path_info(...), but GN
    # flags that as a potential mistake, so here is a workaround.
    patched_include_dirs = include_dirs
    patched_include_dirs[0] =
        get_path_info("//vivaldi/platform_media/ffmpeg/", "gen_dir")
    include_dirs = []
    include_dirs = patched_include_dirs

    # Workaround for the byggmakker caching issue. We change the value whenever
    # we add a new generated header file that should be found before FFmpeg
    # sources on the include list. Without this the cache may not see that the
    # include list should re-searched.
    defines += [ "VIVALDI_FFMPEG_REBUILD=20220717" ]
  }

  if (is_mac) {
    update_target("//third_party/ffmpeg:ffmpeg") {
      if (!defined(frameworks)) {
        frameworks = []
      }
      frameworks += [ "AudioToolbox.framework" ]
    }
  }
}

